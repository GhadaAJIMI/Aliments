<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="@dimen/marginFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageAliment"
        android:layout_width="@dimen/tailleImage"
        android:layout_height="@dimen/tailleImage"
        android:src="@drawable/banane"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/marginFragment"
        >

        <TextView
            android:id="@+id/nomAliment"
            android:text="nom"
            android:textSize="@dimen/textSize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/prixAliment"
            android:textSize="@dimen/textSize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix"></TextView>

    </LinearLayout>


</LinearLayout>