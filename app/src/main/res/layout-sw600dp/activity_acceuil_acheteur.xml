<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:gravity="center"
    tools:context=".vues.AcceuilAcheteurActivity">

    <fragment
        android:id="@+id/panierfrag"
        android:name="com.example.aliments.adapters.FragmentContainer"
        android:layout_width="700dp"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/panier1"

        android:src="@drawable/ic_basket"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/panier2"
        android:src="@drawable/ic_basket"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="710dp"/>

    <TextView
        android:id="@+id/acceuilAchteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceuil Acheteur"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        android:layout_centerHorizontal="true"
        android:textSize="75sp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/buttonParAliment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceuilAchteur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Recherche Aliment"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/buttonParVendeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/buttonParAliment"
        android:text="Recherche Vendeur"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/buttonListesPreferees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/buttonParVendeur"
        android:text="Mes listes de courses preferÃ©es"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/buttonPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonListesPreferees"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Mon panier"
        android:textSize="50sp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Back"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonPanier"/>

</RelativeLayout>