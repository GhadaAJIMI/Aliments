<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    tools:context=".vues.AcceuilAcheteurActivity">

    <fragment
        android:name="com.example.aliments.adapters.FragmentContainer"
        android:id="@+id/panierfrag"
        android:layout_width="500dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/panier1"
        android:src="@drawable/shopping_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/panier2"
        android:src="@drawable/shopping_cart"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"/>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".vues.AcceuilAcheteurActivity">

    <TextView
        android:id="@+id/AcceuilacheteurText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceuil Acheteur"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        android:padding="5dp"
        android:textSize="25sp"/>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:orientation="horizontal">
    <Button
        android:id="@+id/buttonParAliment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:textSize="20sp"
        android:text="Recherche Aliment" />

    <Button
        android:id="@+id/buttonParVendeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Recherche Vendeur" />
  </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/buttonListesPreferees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:textSize="20sp"
        android:text="Mes courses preferÃ©es" />

        <Button
            android:id="@+id/buttonPanier"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Mon panier"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:text="Back" />


</LinearLayout>
</RelativeLayout>