<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".vues.ConsulterAlimentActivity">

    <LinearLayout
        android:layout_width="670dp"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aliment_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="126dp"
            android:src="@drawable/orange" />


        <TextView
            android:id="@+id/aliment_name"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="@dimen/marginFragment"

            android:layout_marginLeft="@dimen/marginFragment"
            android:layout_marginTop="@dimen/marginFragment"
            android:layout_marginEnd="@dimen/marginFragment"
            android:layout_marginRight="@dimen/marginFragment"
            android:layout_marginBottom="@dimen/marginFragment"
            android:text="Nom de l'aliment :"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/aliment_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginFragment"
            android:text="Banane"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/aliment_price"

            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/marginFragment"
            android:text="Prix :"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/aliment_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginFragment"
            android:text="5 euro"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="654dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button

            android:id="@+id/ajoutPanier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ajouter au panier"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ajout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ajouter aux courses prÃ©f"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:layout_marginLeft="300dp"
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>